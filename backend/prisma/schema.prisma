  @@index([merchantId])
  @@index([companyId])
  @@index([companyUserId])
  @@index([status])
  @@index([ticketNumber])
  @@map("support_tickets")
}

model TicketResponse {
  id       String @id @default(uuid())
  ticketId String @map("ticket_id")

  message      String  @db.Text
  isStaffReply Boolean @default(false) @map("is_staff_reply")

